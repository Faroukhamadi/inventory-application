extends layout 

block content
  h1= title
  form(action="" method="POST") 
    div.form-group
      label(for="name").lead Name: 
      input#name.form-control.mb-3(type="text" placeholder="Category name (Computers)" name="name"  value= (undefined===category ? '' : category.name))
      label(for="description").lead Description: 
      textarea#description.form-control.mb-3(type="text" placeholder="Description" name="description" maxlength=300 value= (undefined===category ? '' : category.description))
    button.btn.btn-primary.mb-3(type="submit") Submit  
  
  if errors 
    ul.list-group.list-group-flush
      each error in errors 
        li.text-decoration-none.alert.alert-danger #{error.msg}